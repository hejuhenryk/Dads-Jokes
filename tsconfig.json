{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2016", "DOM"],
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": "./"
  },
  "include": ["**/*.d.ts", "**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules/**"]
}
